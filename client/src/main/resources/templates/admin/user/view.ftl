<div id="user-view-modal" class="modal fade" tabindex="-1">
    <form id="user-view-form" action="" method="get">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h4 class="blue bigger">用户</h4>
                    <button type="button" class="close" data-dismiss="modal">&times;</button>
                </div>

                <div class="modal-body overflow-visible">
                    <div class="row">

                        <div class="col-xs-12 col-sm-12">

                            <table class="table table-bordered table-striped m-b-0"><!-- table-hover-->
                                <tbody>
                                <tr>
                                    <td colspan="2" class="text-center">
                                        <div class="overflow-auto" id="user-view-icon"></div>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="width-80">id</th>

                                    <td>
                                        <div class="overflow-auto" id="user-view-id"></div>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="width-80">名字</th>

                                    <td>
                                        <div class="overflow-auto" id="user-view-name"></div>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="width-80">用户名</th>

                                    <td>
                                        <div class="overflow-auto" id="user-view-username"></div>
                                    </td>
                                </tr>
                                <!--
                                <tr>
                                    <th class="width-80">密码</th>

                                    <td>
                                        <div class="overflow-auto" id="user-view-password"></div>
                                    </td>
                                </tr>
                                -->
                                <tr>
                                    <th class="width-80">状态</th>

                                    <td>
                                        <div class="overflow-auto" id="user-view-status"></div>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="width-80">Email</th>

                                    <td>
                                        <div class="overflow-auto" id="user-view-email"></div>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="width-80">联系电话</th>

                                    <td>
                                        <div class="overflow-auto" id="user-view-phone"></div>
                                    </td>
                                </tr>
                                <tr>
                                    <th class="width-80">创建时间</th>

                                    <td>
                                        <div class="overflow-auto" id="user-view-createTime"></div>
                                    </td>
                                </tr>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button class="btn btn-lime" data-dismiss="modal">
                        关闭
                    </button>
                </div>
            </div>
        </div>
    </form>
</div>